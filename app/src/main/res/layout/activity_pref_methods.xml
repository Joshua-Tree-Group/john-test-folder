<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top Preferred Methods"
                        android:textSize="30dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/topPref1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tpm1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preferred method goes here" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/topPref2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tpm2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preferred method goes here" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/topPref3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tpm3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preferred method goes here" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Preferred Methods"
                        android:textSize="30dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/pref1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/pm1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preferred method goes here" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/pref2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/pm2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preferred method goes here" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/pref3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/pm3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preferred method goes here" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Advanced Methods"
                        android:textSize="30dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/adv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/am1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preferred method goes here" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/adv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/am2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preferred method goes here" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/adv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/am3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preferred method goes here" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pace"
                        android:textSize="30dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/pace1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="selectedItem" />

                        <TextView
                            android:id="@+id/paceTxt1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Poor, unmotivated pace." />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/pace2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/paceTxt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unmotivated pace" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/pace3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/paceTxt3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Slightly unmotivated pace" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/pace4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/paceTxt4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Solid, consistent motivated pace" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/pace5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/paceTxt5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Extremely motivated, consistent pace" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Utilization"
                        android:textSize="30dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/util1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/utilTxt1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Consistently unprepared/distracted." />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/util2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/utilTxt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Distracted, 5+ occurrences of unproductive times." />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/util3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/utilTxt3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Focused but 3-4 occurrences of unproductive times." />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/util4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/utilTxt4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="On task and focused. 1-2 brief unproductive occurrences." />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/util5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/utilTxt5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Always on task and working." />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Methods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Methods"
                        android:textSize="30dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/methods1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/methodsTxt1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Minimal preferred method used, clear reason for underperf." />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/methods2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/methodsTxt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Inconsistent preferred methods." />

                    </LinearLayout>

                    <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/methods3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/methodsTxt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Focused but 3-4 occurences of unproductive time" />

                </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/methods4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/methodsTxt4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Consistent use of preferred methods" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/methods5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/methodsTxt5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Consistently uses preferred methods, and advanced methods" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dataEntry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="What are 3 things the associate can improve?"
                        android:textSize="30dp" />

                    <EditText
                        android:id="@+id/improvements1"
                        android:layout_width="600dp"
                        android:layout_height="wrap_content"
                        android:text="1)"
                        android:textSize="20dp">

                    </EditText>

                    <EditText
                        android:id="@+id/improvements2"
                        android:layout_width="600dp"
                        android:layout_height="wrap_content"
                        android:text="2)"
                        android:textSize="20dp">

                    </EditText>

                    <EditText
                        android:id="@+id/improvements3"
                        android:layout_width="600dp"
                        android:layout_height="wrap_content"
                        android:text="3)"
                        android:textSize="20dp">

                    </EditText>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="What are 3 things the associate does well?"
                        android:textSize="30dp"></TextView>

                    <EditText
                        android:id="@+id/didWell1"
                        android:layout_width="600dp"
                        android:layout_height="wrap_content"
                        android:text="1)"
                        android:textSize="20dp">

                    </EditText>

                    <EditText
                        android:id="@+id/didWell2"
                        android:layout_width="600dp"
                        android:layout_height="wrap_content"
                        android:text="2)"
                        android:textSize="20dp">

                    </EditText>

                    <EditText
                        android:id="@+id/didWell3"
                        android:layout_width="600dp"
                        android:layout_height="wrap_content"
                        android:text="3)"
                        android:textSize="20dp">

                    </EditText>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Associate Feedback"
                        android:textSize="30dp"></TextView>

                    <EditText
                        android:id="@+id/feedback1"
                        android:layout_width="600dp"
                        android:layout_height="wrap_content"
                        android:text="1)"
                        android:textSize="20dp">

                    </EditText>

                    <EditText
                        android:id="@+id/feedback2"
                        android:layout_width="600dp"
                        android:layout_height="wrap_content"
                        android:text="2)"
                        android:textSize="20dp">

                    </EditText>

                    <EditText
                        android:id="@+id/feedback3"
                        android:layout_width="600dp"
                        android:layout_height="wrap_content"
                        android:text="3)"
                        android:textSize="20dp">

                    </EditText>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GENERATE SUMMARY"
                        android:textSize="20dp"
                        android:layout_marginTop="25dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="25dp"
                        android:id="@+id/summary"/>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>